        .resume_social_media
            %a{:href => "https://www.linkedin.com/in/camronmoradi/", :target => "_blank"}
                %img{:src => './images/linkedin.png'}
            %a{:href => "https://www.instagram.com/camronjuniorldnf/", :target => "_blank"}
                %img{:src => './images/instagram.png'}

        .resume_experience
            %h1.section_name Experience
            - data.resume_experience.each do |job|
                %h2.job_title= job[:title]
                %h3.company= job[:company]
                %h3.dates= job[:dates]
                %h3.location= job[:location]
                %h3.job_description= job[:description]

        .resume_education
            %h1.section_name Education
            - data.resume_education.each do |education|
                %h2.school= education[:school]
                %h3.degree= education[:degree]
                %h3.dates= education[:dates]
                %h3.location= education[:location]
