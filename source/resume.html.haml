
.resume_wrapper

    .resume_nav_menu
        %p nav menu text

    .resume_body

        .resume_about
            %h1.name
                Camron
                %span{class: "last-name"} Moradi
            %h3.address 11 Commercial Street, London, UK  |  +44 7754 193 111  | camron1234@gmail.com  
